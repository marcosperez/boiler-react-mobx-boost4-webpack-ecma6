{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "no-unused-vars": 0,
        "max-len": [1, 70, 2, {"ignoreComments": true}],
        "arrow-body-style": "off",
        "no-console": "off",
        "no-continue": "off",
        "jsx-quotes": [2, "prefer-single"],
        "react/jsx-curly-spacing": [2, "always"],
        "react/prefer-stateless-function": [0]
    },
    "settings": {
        "import/resolver": "webpack"
    }
}